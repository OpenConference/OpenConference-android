<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/sessions_item_padding_top_bottom"
    android:paddingLeft="@dimen/keyline_contentstart"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/sessions_item_padding_top_bottom"
    >

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      tools:text="Name of the Session"
      style="@style/ScheduleSessionTitle"
      />


  <TextView
      android:id="@+id/speakers"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/title"

      android:layout_marginTop="@dimen/sessions_item_title_details_space"
      android:drawablePadding="4dp"
      android:drawableStart="@drawable/ic_person"
      tools:text="Speaker1, Speaker2"
      style="@style/ScheduleSessionSpeakers"
      />


  <TextView
      android:id="@+id/time"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/speakers"
      android:layout_marginTop="@dimen/sessions_item_text_space"
      android:drawablePadding="4dp"
      android:drawableStart="@drawable/ic_time"
      tools:text="22:00 - 23:00"
      style="@style/ScheduleSessionSpeakers"
      />


  <TextView
      android:id="@+id/location"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/time"
      android:layout_marginTop="@dimen/sessions_item_text_space"
      android:layout_toLeftOf="@+id/favorite"
      android:drawablePadding="4dp"
      android:drawableStart="@drawable/ic_location"
      tools:text="Location 103"
      style="@style/ScheduleSessionSpeakers"
      />

  <ImageView
      android:id="@+id/favorite"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:src="@drawable/ic_done"
      />

</RelativeLayout>
